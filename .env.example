# ============================================
# Mode Selection (for *_openai.py scripts)
# ============================================
# Set to "databricks" or "openai"
MODE=databricks

# ============================================
# Databricks Configuration
# ============================================
# Required for: chat_cli.py, app.py, and *_openai.py (when MODE=databricks)
# Get these from your Databricks workspace
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-token

# ============================================
# OpenAI Configuration (OPTIONAL)
# ============================================
# Required for: *_openai.py scripts when MODE=openai
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# Slack Configuration (OPTIONAL)
# ============================================
# Only needed for Slack bot (app.py or app_openai.py)
# Get these from https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
